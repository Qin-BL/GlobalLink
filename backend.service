[Unit]
Description=GlobalLink Backend Service
After=network.target postgresql.service mongodb.service redis-server.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/GlobalLink/backend
ExecStart=/home/ubuntu/GlobalLink/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=on-failure
Environment="PATH=/home/ubuntu/GlobalLink/backend/venv/bin"
EnvironmentFile=/home/ubuntu/GlobalLink/.env

[Install]
WantedBy=multi-user.target